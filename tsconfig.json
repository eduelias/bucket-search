{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/@types",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "types": [],

    "module": "commonjs",
    "target": "es2017",
    "lib": ["dom", "es2017"]
  },
  "include": ["src/**/*.ts"]
}
